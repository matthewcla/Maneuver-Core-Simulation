{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "label": "serve",
            "isBackground": true,
            "problemMatcher": {
                "owner": "checklist",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Building...",
                    "endsPattern": "Built in [0-9]+ms"
                }
            }
        }
    ]
}